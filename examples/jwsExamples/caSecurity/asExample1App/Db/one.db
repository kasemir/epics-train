record(calc, "$(S):ramp")
{
  field(CALC, "(A<B)?(A+C):0")
  field(INPA, "$(S):ramp")
  field(SCAN, "1 second")
  field(INPB, "$(S):limit")
  field(INPC, "$(S):step")
}

